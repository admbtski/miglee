# =============================================================================
# Miglee API - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values
# See DOCUMENTATION.md for detailed explanations

# =============================================================================
# Server Configuration
# =============================================================================

NODE_ENV=development
SERVICE_NAME=api
PORT=4000
HOST=localhost

# =============================================================================
# Security
# =============================================================================

# JWT Secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production

# =============================================================================
# Database
# =============================================================================

DATABASE_URL=postgresql://user:password@localhost:5432/miglee_dev

# =============================================================================
# Redis (optional for development, required for production)
# =============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# =============================================================================
# CORS
# =============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log

# =============================================================================
# Media Storage
# =============================================================================

MEDIA_STORAGE_PROVIDER=LOCAL
UPLOADS_PATH=./uploads
UPLOADS_TMP_PATH=./tmp/uploads

# Image Processing
IMAGE_MAX_WIDTH=2560
IMAGE_MAX_HEIGHT=2560
IMAGE_FORMAT=webp
IMAGE_QUALITY=85

# =============================================================================
# S3 Storage (required if MEDIA_STORAGE_PROVIDER=S3)
# =============================================================================

# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET=miglee-media
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# CDN (optional)
# =============================================================================

# CDN_ENABLED=false
# CDN_BASE_URL=https://cdn.example.com
# ASSETS_BASE_URL=http://localhost:4000

# =============================================================================
# Stripe (required for billing features)
# =============================================================================

# Stripe API Keys
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs - User Plans
# STRIPE_PRICE_USER_PLUS_MONTHLY_SUB=price_...
# STRIPE_PRICE_USER_PLUS_MONTHLY_ONEOFF=price_...
# STRIPE_PRICE_USER_PLUS_YEARLY_ONEOFF=price_...
# STRIPE_PRICE_USER_PRO_MONTHLY_SUB=price_...
# STRIPE_PRICE_USER_PRO_MONTHLY_ONEOFF=price_...
# STRIPE_PRICE_USER_PRO_YEARLY_ONEOFF=price_...

# Stripe Price IDs - Event Plans
# STRIPE_PRICE_EVENT_PLUS=price_...
# STRIPE_PRICE_EVENT_PRO=price_...

# Stripe Price IDs - Action Packages
# STRIPE_PRICE_ACTION_PACKAGE_SMALL=price_...
# STRIPE_PRICE_ACTION_PACKAGE_MEDIUM=price_...
# STRIPE_PRICE_ACTION_PACKAGE_LARGE=price_...

# =============================================================================
# Application URLs
# =============================================================================

APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# =============================================================================
# Email Service (Resend)
# =============================================================================

# RESEND_API_KEY=re_...
EMAIL_FROM=Miglee <noreply@miglee.pl>

# =============================================================================
# Admin Features
# =============================================================================

# Enable Bull Board in production (default: false)
ENABLE_BULL_BOARD=false
