# =============================================================================
# Stage Secrets Template - DO NOT COMMIT REAL VALUES
# =============================================================================
# Copy this to secrets.yaml and fill in real values
# secrets.yaml should be in .gitignore
#
# For production, use External Secrets Operator or SOPS
# =============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: appname-stage
  labels:
    app.kubernetes.io/name: appname
    app.kubernetes.io/environment: stage
type: Opaque
stringData:
  # Database
  DATABASE_URL: "postgresql://user:password@host:5432/dbname?schema=public"
  
  # Redis (if password required)
  REDIS_PASSWORD: ""
  
  # Authentication
  JWT_SECRET: "your-jwt-secret-min-32-chars"
  COOKIE_SECRET: "your-cookie-secret-min-32-chars"
  
  # Stripe
  STRIPE_SECRET_KEY: "sk_test_..."
  STRIPE_WEBHOOK_SECRET: "whsec_..."
  STRIPE_PRICE_ID_PLUS: "price_..."
  STRIPE_PRICE_ID_PRO: "price_..."
  
  # Email (Resend)
  RESEND_API_KEY: "re_..."
  
  # S3/Storage
  S3_ACCESS_KEY: ""
  S3_SECRET_KEY: ""
  
  # Google Maps (optional)
  GOOGLE_MAPS_API_KEY: ""

