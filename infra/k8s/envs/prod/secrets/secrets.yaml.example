# =============================================================================
# Production Secrets Template - DO NOT COMMIT REAL VALUES
# =============================================================================
# For production, use External Secrets Operator with AWS Secrets Manager
# or SOPS encrypted secrets
#
# This file is a reference only - actual secrets should come from:
# - AWS Secrets Manager via External Secrets Operator
# - HashiCorp Vault
# - SOPS encrypted files
# =============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: appname-prod
  labels:
    app.kubernetes.io/name: appname
    app.kubernetes.io/environment: prod
type: Opaque
stringData:
  # Database (use AWS RDS)
  DATABASE_URL: "postgresql://user:password@rds-endpoint:5432/dbname?schema=public&sslmode=require"
  
  # Redis (use AWS ElastiCache)
  REDIS_PASSWORD: ""
  
  # Authentication (use strong, unique secrets)
  JWT_SECRET: "your-production-jwt-secret-min-64-chars"
  COOKIE_SECRET: "your-production-cookie-secret-min-64-chars"
  
  # Stripe (production keys)
  STRIPE_SECRET_KEY: "sk_live_..."
  STRIPE_WEBHOOK_SECRET: "whsec_..."
  STRIPE_PRICE_ID_PLUS: "price_..."
  STRIPE_PRICE_ID_PRO: "price_..."
  
  # Email (Resend)
  RESEND_API_KEY: "re_..."
  
  # S3/Storage (use IAM roles if possible)
  S3_ACCESS_KEY: ""
  S3_SECRET_KEY: ""
  
  # Google Maps
  GOOGLE_MAPS_API_KEY: ""

